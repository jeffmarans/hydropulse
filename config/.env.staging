# Staging Environment Configuration

# Node Environment
NODE_ENV=staging

# Hydropulse Service Configuration
HYDROPULSE_SERVICE_NAME=hydropulse-staging
HYDROPULSE_SERVICE_VERSION=1.0.0
HYDROPULSE_ENVIRONMENT=staging
HYDROPULSE_PROVIDER=auto

# Hydropulse Grafana Configuration
HYDROPULSE_GRAFANA_URL=https://staging-grafana.company.com/api/traces
HYDROPULSE_GRAFANA_API_KEY=staging-api-key-replace-with-real-key
HYDROPULSE_GRAFANA_APP_KEY=hydropulse-staging

# Hydropulse OpenTelemetry Configuration
HYDROPULSE_OTEL_ENDPOINT=https://staging-otel.company.com
HYDROPULSE_OTEL_TOKEN=staging-token-replace-with-real-token

# Hydropulse Alloy Configuration (OTEL Collector)
HYDROPULSE_ALLOY_ENDPOINT=https://staging-alloy.company.com:4318
HYDROPULSE_ALLOY_TOKEN=staging-alloy-token-replace-with-real-token

# Hydropulse Debug Configuration
HYDROPULSE_DEBUG=false

# Hydropulse Sampling Configuration
HYDROPULSE_SAMPLING_RATE=0.5

# Hydropulse Batching Configuration
HYDROPULSE_BATCH_SIZE=100
HYDROPULSE_BATCH_DELAY=3000

# Hydropulse Circuit Breaker Configuration
HYDROPULSE_CIRCUIT_BREAKER_THRESHOLD=5
HYDROPULSE_CIRCUIT_BREAKER_TIMEOUT=60000

# Hydropulse Security Configuration
HYDROPULSE_SANITIZE_PII=true

# Hydropulse Retry Configuration
HYDROPULSE_RETRY_MAX_ATTEMPTS=3
HYDROPULSE_RETRY_INITIAL_DELAY=1000
