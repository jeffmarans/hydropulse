# Development Environment Configuration

# Node Environment
NODE_ENV=development

# Hydropulse Service Configuration
HYDROPULSE_SERVICE_NAME=hydropulse-dev
HYDROPULSE_SERVICE_VERSION=1.0.0
HYDROPULSE_ENVIRONMENT=development
HYDROPULSE_PROVIDER=auto

# Hydropulse Grafana Configuration
HYDROPULSE_GRAFANA_URL=http://localhost:3000/api/traces
HYDROPULSE_GRAFANA_API_KEY=dev-api-key-replace-with-real-key
HYDROPULSE_GRAFANA_APP_KEY=hydropulse-dev

# Hydropulse OpenTelemetry Configuration
HYDROPULSE_OTEL_ENDPOINT=http://localhost:4318
HYDROPULSE_OTEL_TOKEN=dev-token-replace-with-real-token

# Hydropulse Alloy Configuration (OTEL Collector)
HYDROPULSE_ALLOY_ENDPOINT=http://localhost:4318
HYDROPULSE_ALLOY_TOKEN=

# Hydropulse Debug Configuration
HYDROPULSE_DEBUG=true

# Hydropulse Sampling Configuration
HYDROPULSE_SAMPLING_RATE=1.0

# Hydropulse Batching Configuration
HYDROPULSE_BATCH_SIZE=10
HYDROPULSE_BATCH_DELAY=1000

# Hydropulse Circuit Breaker Configuration
HYDROPULSE_CIRCUIT_BREAKER_THRESHOLD=3
HYDROPULSE_CIRCUIT_BREAKER_TIMEOUT=30000

# Hydropulse Security Configuration
HYDROPULSE_SANITIZE_PII=true

# Hydropulse Retry Configuration
HYDROPULSE_RETRY_MAX_ATTEMPTS=3
HYDROPULSE_RETRY_INITIAL_DELAY=1000
