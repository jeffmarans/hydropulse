# Hydropulse To-Do App Environment Variables

# Application Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=todoapp
DB_USER=postgres
DB_PASSWORD=postgres

# Hydropulse Configuration
HYDROPULSE_SERVICE_NAME=todo-observability-demo
HYDROPULSE_SERVICE_VERSION=1.0.0
HYDROPULSE_ENVIRONMENT=development
HYDROPULSE_PROVIDER=alloy
HYDROPULSE_DEBUG=true

# Grafana Alloy Configuration (OTEL Collector)
HYDROPULSE_ALLOY_ENDPOINT=http://localhost:4318
HYDROPULSE_ALLOY_TOKEN=

# Optional Configuration
HYDROPULSE_SAMPLING_RATE=1.0
HYDROPULSE_BATCH_SIZE=100
HYDROPULSE_BATCH_DELAY=5000
HYDROPULSE_CIRCUIT_BREAKER_THRESHOLD=3
HYDROPULSE_CIRCUIT_BREAKER_TIMEOUT=30000
HYDROPULSE_SANITIZE_PII=true
HYDROPULSE_RETRY_MAX_ATTEMPTS=3
HYDROPULSE_RETRY_INITIAL_DELAY=1000
